<% provide :title, @user.name %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>

    <section>
      <%= render 'shared/stat' %>
    </section>

    <section>
      <%= render 'shared/follow_form' if user_signed_in? %>
    </section>
  </aside>
</div>
 