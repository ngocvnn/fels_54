<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for [:admin, @user] do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <%= f.label :name %><br>
      <%= f.text_field :name %>

      <%= f.label :email %><br>
      <%= f.text_field :email %>

      <%= f.label :role_id %><br>
      <%= collection_select(:user, :role_id, Role.all, :id, :name, 
        prompt: true) %>

      <%= f.label :password %><br>
      <%= f.password_field :password, placeholder: "Leave blank if unchanged"%>
   
      <div class="actions">
        <%= f.submit class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>