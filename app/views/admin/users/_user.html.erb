<li>
  <%= gravatar_for user %>
  <%= link_to user.name, user %><br>
  <%= user.email %><br>
  <%= user.role.name %><br>
  <%= link_to 'View Profile', user %>
  <% if can? :update, user %>
    | <%= link_to 'Edit', edit_admin_user_path(user) %>
  <% end %>
  <% if can? :destroy, user %>
    | <%= link_to 'Destroy', [:admin, user], method: :delete, 
      data: {confirm: 'Are you sure?'} %>
  <% end %>
</li>