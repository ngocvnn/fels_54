<% provide :title, 'Category' %>
<h1>Add Category</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for [:admin, @category] do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <%= f.label :title %>
      <%= f.text_field :title %>
      <%= f.label :description %>
      <%= f.text_area :description %>
      <div class="btn-cate">
        <%= f.submit "Create", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div> 
</div>
