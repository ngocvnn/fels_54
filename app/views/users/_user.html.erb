<li >
  <%= gravatar_for user %>
  <%= link_to user.name, user %>
  <br><br>&nbsp;&nbsp;
  <% if current_user.admin? && !current_user?(user) %>
    <%= link_to "Delete", [:admin, user], method: :delete, 
      data: {confirm: "You sure?"}%>
    | <%= link_to "Edit", edit_admin_user_path(user) %>
  <% end %> 
</li>
