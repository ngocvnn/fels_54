<% provide :title, @user.name %>
<div class="row">
  <aside class="col-md-2">
    <section class="user_info" id="user-info">
      <%= gravatar_for @user %>
      <p id="user-name">
        <%= @user.name %><br>
        Learned <%= pluralize Word.learned_words(current_user).count, "word" %>
      </p>
    </section>

    <section>
      <%= render 'shared/stat' %>
    </section>

    <section>
      <%= render 'shared/follow_form' if logged_in? %>
    </section>
  </aside>
</div>
 